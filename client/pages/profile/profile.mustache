<section id="profile">

	<div class="form-group col-sm-6 col-sm-offset-3">

		<h2></h2>

		<form class="form-horizontal well" data-bind="submit: save, event: { reset: clean }">
			<fieldset>
				<legend>Edit Profile</legend>
				
				<div class="form-group">
					<label class="col-lg-3 control-label">Username</label>
					<div class="col-lg-9">
						<input type="text" name="username" class="form-control" data-bind="placeholder: username, event: { change: toggleSubmit }">
					</div>
				</div>

				<div class="form-group">
					<label class="col-lg-3 control-label">Phone</label>
					<div class="col-lg-9">
						<input type="tel" name="phone" pattern="^\d{10}$" title="Example: 4084567890" class="form-control" data-bind="placeholder: phone, event: { change: toggleSubmit }">
					</div>
				</div>

				<div class="form-group">
					<label class="col-lg-3 control-label">Email</label>
					<div class="col-lg-9">
						<input type="email" name="email" class="form-control" data-bind="placeholder: email, event: { change: toggleSubmit }">
					</div>
				</div>
				
				<div class="form-group">
					<label for="select" class="col-lg-3 control-label">Shirt Size</label>
					<div class="col-lg-9">
						<select class="form-control" name="shirt_size" data-bind="value: shirtSize, event: { change: toggleSubmit }">
							<option>Select a Shirt Size...</option>
							<option value="YS">YS</option>
							<option value="YM">YM</option>
							<option value="YL">YL</option>
							<option value="S">S</option>
							<option value="M">M</option>
							<option value="L">L</option>
							<option value="XL">XL</option>
						</select>
					</div>
				</div>

				<div class="form-group">
					<label class="col-lg-3 control-label">School Address</label>
					<div class="col-lg-9">
						<input type="text" name="temp_address" class="form-control" data-bind="placeholder: schoolAddress, event: { change: toggleSubmit }">
					</div>
				</div>

				<div class="form-group">
					<label class="col-lg-3 control-label">Permanent Address</label>
					<div class="col-lg-9">
						<input type="text" name="perm_address" class="form-control" data-bind="placeholder: permanentAddress, event: { change: toggleSubmit }">
					</div>
				</div>

				<div class="form-group">
					<div class="col-lg-12 text-center">
						<button type="reset" class="btn btn-default">Cancel</button>
						<button type="submit" class="btn btn-primary" data-bind="enable: submitEnabled"> Submit </button>
					</div>
				</div>

			</fieldset>
		</form>

	</div>

</section>