<section id="profile">

	<div class="form-group col-sm-6 col-sm-offset-3">

		<form id="editProfile" class="form-horizontal well" data-bind="submit: showConfirm">
			<fieldset>
				<legend>Edit Profile</legend>
				
				<div class="alert alert-success" role="alert" data-bind="visible: successMessage" style="display: none;">
					<span data-bind="text: successMessage"></span>
				</div>

				<div class="alert alert-danger" role="alert" data-bind="visible: errorMessage" style="display: none;">
					<span class="fa fa-exclamation-circle" aria-hidden="true"></span>
					<span class="sr-only">Error:</span>
					<span data-bind="text: errorMessage"></span>
				</div>

				<div class="form-group">
					<label class="col-lg-3 control-label">Phone</label>
					<div class="col-lg-9">
						<input type="tel" name="phone" pattern="^\d{10}$" title="Example: 4084567890" class="form-control" data-bind="placeholder: phone, event: { change: toggleSubmit }">
					</div>
				</div>

				<div class="form-group">
					<label class="col-lg-3 control-label">Email</label>
					<div class="col-lg-9">
						<input type="email" name="email" class="form-control" data-bind="placeholder: email, event: { change: toggleSubmit }">
					</div>
				</div>
				
				<div class="form-group">
					<label for="select" class="col-lg-3 control-label">Shirt Size</label>
					<div class="col-lg-9">
						<select class="form-control" name="shirt_size" data-bind="value: shirtSize, event: { change: toggleSubmit }">
							<option>Select a Shirt Size...</option>
							<option value="YS">YS</option>
							<option value="YM">YM</option>
							<option value="YL">YL</option>
							<option value="S">S</option>
							<option value="M">M</option>
							<option value="L">L</option>
							<option value="XL">XL</option>
						</select>
					</div>
				</div>

				<div class="form-group">
					<label class="col-lg-3 control-label">School Address</label>
					<div class="col-lg-9">
						<input type="text" name="temp_address" class="form-control" data-bind="placeholder: schoolAddress, event: { change: toggleSubmit }">
					</div>
				</div>

				<div class="form-group">
					<label class="col-lg-3 control-label">Permanent Address</label>
					<div class="col-lg-9">
						<input type="text" name="perm_address" class="form-control" data-bind="placeholder: permanentAddress, event: { change: toggleSubmit }">
					</div>
				</div>
				<div class="form-group">
					<label class="col-lg-3 control-label">New Password</label>
					<div class="col-lg-9">
						<input type="password" name="password" class="form-control" data-bind="value: password, event: { change: toggleSubmit }">
					</div>
				</div>

				<div class="form-group" data-bind="visible: !confirmEnabled()">
					<div class="col-lg-12 text-center">
						<button type="reset" class="btn btn-default" data-bind="click: clean">Cancel</button>
						<button class="btn btn-primary" style="width: 78px" data-bind="visible: submitting">
							<i class="fa fa-spinner fa-spin"></i>
						</button>
						<button type="submit" class="btn btn-primary" data-bind="visible: !submitting(), enable: submitEnabled"> Submit </button>
					</div>
				</div>

				<div class="alert alert-warning row" role="alert" data-bind="visible: confirmEnabled" style="display: none;">
					<div class="col-lg-8 control-label form-group" data-bind="css: { 'has-error': confirmError }">
						<input type="password" placeholder="Enter Current Password" class="form-control" data-bind="value: confirmPassword">
					</div>
					<div class="col-lg-4 control-label">
						<button type="button" class="col-lg-6 btn btn-warning" data-bind="click: cancelConfirm">Cancel</button>
						<button type="button" class="col-lg-6 btn btn-primary" data-bind="click: save">Confirm</button>
					</div>
				</div>

			</fieldset>
		</form>

	</div>

</section>