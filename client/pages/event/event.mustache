<section id="event">
	
	<div class="container">
		
		<h2>Upcoming <span data-bind="text: title"></span></h2>
		
		<a href="#" class="btn btn-info visible-xs-block" data-bind="click: showFilters">Filters</a>

		<div class="col-xs-12 col-sm-2 pull-right">
			
			<h6 class="hidden-xs-override">Filters</h6>
			
			<ul class="nav nav-pills nav-stacked hidden-xs-override filter-collapse">
			  	
			  	<li id="general" data-bind="eventFilter: { conflicts: [ services, fellowships, interchapters ] }, click: filterEvents">
			  		<a><strong>General</strong></a></li>
			  	<hr>

			  	<li id="service" data-bind="eventFilter: { conflicts: [ general, fellowships, interchapters ] }, click: filterEvents">
			  		<a><strong>Services</strong></a></li>
				<hr>

				<li id="fellowship" data-bind="eventFilter: { conflicts: [ general, services, interchapters ] }, click: filterEvents">
					<a><strong>Fellowships</strong></a></li>
				<hr>

				<li id="interchapter" data-bind="eventFilter: { conflicts: [ general, services, fellowships ] }, click: filterEvents">
					<a><strong>Interchapters</strong></a></li>
				<hr>

			</ul>
		</div>
		
		<div class="col-sm-10 filtered-table">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Date</th>
						<th>Name</th>
					</tr>
				</thead>

				<tfoot>
					<tr>
						<td colspan="2"><div class="text-center" style="display: block;" data-bind="visible: loaderEnabled">
							<i class="fa fa-refresh fa-spin"></i>
						</div></td>
					</tr>
				</tfoot>
				
				<tbody style="display: none;" data-bind="visible: !pageLoading(), foreach: events">
					<tr>
						<td data-bind="text: date"></td>
						<td data-bind="html: name"></td>
					</tr>
				</tbody>
			</table>
		</div>

	</div>
</section>