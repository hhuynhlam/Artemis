<section id="event">
	
	<div class="container">
		
		<h2>Upcoming Fellowships</h2>
		
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Date</th>
					<th>Name</th>
				</tr>
			</thead>

			<tfoot>
				<tr>
					<td colspan="2"><div class="text-center" style="display: block;" data-bind="visible: loaderEnabled">
						<i class="fa fa-refresh fa-spin"></i>
					</div></td>
				</tr>
			</tfoot>
			
			<tbody style="display: none;" data-bind="visible: !pageLoading(), foreach: events">
				<tr>
					<td data-bind="text: date"></td>
					<td data-bind="text: name"></td>
				</tr>
			</tbody>
		</table>

	</div>
</section>