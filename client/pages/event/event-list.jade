extends ../_layout.jade

block content
    section#Event
        ol.breadcrumb
            li
                a(href="#/") Home
            li.active Events

        .container
            h2 Upcoming Events
            .well
                
                #FilterEvents(data-placeholder="Filter Events")

                table.table
                    thead
                        tr
                            th Date
                            th Name
                    tbody(data-bind="foreach: formattedEvents")
                        tr
                            td(data-bind="text: date")
                            td
                                a(data-bind="attr: { href: window.env.CLIENT_HOST + '/event/' + id }")
                                    span(data-bind="text: name")

                div.text-center
                    button.btn.btn-info(data-bind="visible: isMore, click: seeMore") See More
                    button.btn.btn-info(data-bind="visible: !isMore()" disabled) No More