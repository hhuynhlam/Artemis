<section id="event">
	
	<div class="container">
		
		<h2>Upcoming Events</h2>
		
		<a href="#" class="btn btn-info visible-xs-block" data-bind="click: showFilters">Filters</a>

		<div class="col-xs-12 col-sm-2 pull-right">
			
			<h6 class="hidden-xs-override">Filters</h6>
			
			<ul class="nav nav-pills nav-stacked hidden-xs-override filter-collapse">
			  	
			  	<li id="general" data-bind="eventFilter: { conflicts: [ services, fellowships, interchapters ] }, click: filterEvents">
			  		<a><strong>General</strong></a></li>
			  	<hr>

			  	<li id="service" data-bind="eventFilter: { conflicts: [ general, fellowships, interchapters ] }, click: filterEvents">
			  		<a><strong>Services</strong></a></li>

				<li id="campus" data-bind="eventFilter: { conflicts: [ general, fellowships, interchapters ] }, click: filterEvents">
					<a><em>Campus</em></a></li>

			  	<li id="community" data-bind="eventFilter: { conflicts: [ general, fellowships, interchapters ] }, click: filterEvents">
			  		<a><em>Community</em></a></li>

			  	<li id="fundraiser" data-bind="eventFilter: { conflicts: [ general, fellowships, interchapters ] }, click: filterEvents">
			  		<a><em>Fundraiser</em></a></li>

			  	<li id="fraternity" data-bind="eventFilter: { conflicts: [ general, fellowships, interchapters ] }, click: filterEvents">
			  		<a><em>Fraternity</em></a></li>

			  	<li id="general_service" data-bind="eventFilter: { conflicts: [ general, fellowships, interchapters ] }, click: filterEvents">
			  		<a><em>General Service</em></a></li>

			  	<li id="nation" data-bind="eventFilter: { conflicts: [ general, fellowships, interchapters ] }, click: filterEvents">
			  		<a><em>Nation</em></a></li>
				<hr>

				<li id="fellowship" data-bind="eventFilter: { conflicts: [ general, services, interchapters ] }, click: filterEvents">
					<a><strong>Fellowships</strong></a></li>

				<li id="cool" data-bind="eventFilter: { conflicts: [ general, services, interchapters ] }, click: filterEvents">
					<a><em>Cool</em></a></li>

				<li id="crazy" data-bind="eventFilter: { conflicts: [ general, services, interchapters ] }, click: filterEvents">
					<a><em>Crazy</em></a></li>

				<li id="sexy" data-bind="eventFilter: { conflicts: [ general, services, interchapters ] }, click: filterEvents">
					<a><em>Sexy</em></a></li>
				<hr>

				<li id="interchapter" data-bind="eventFilter: { conflicts: [ general, services, fellowships ] }, click: filterEvents">
					<a><strong>Interchapters</strong></a></li>

				<li id="interchapter_home" data-bind="eventFilter: { conflicts: [ general, services, fellowships ] }, click: filterEvents">
					<a><em>Interchapter Home</em></a></li>

				<li id="interchapter_away" data-bind="eventFilter: { conflicts: [ general, services, fellowships ] }, click: filterEvents">
					<a><em>Interchapter Away</em></a></li>
				<hr>

			</ul>
		</div>
		
		<div class="col-sm-10 filtered-table">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Date</th>
						<th>Name</th>
					</tr>
				</thead>

				<tfoot>
					<tr>
						<td colspan="2"><div class="text-center" style="display: block;" data-bind="visible: loaderEnabled">
							<i class="fa fa-refresh fa-spin"></i>
						</div></td>
					</tr>
					<tr>
						<td colspan="2"><div class="text-center" style="display: block;" data-bind="visible: !loaderEnabled()">
							<span class="text-muted" data-bind="click: scrollClick">Scroll Down or Click to Load More Events</span>
						</div></td>
					</tr>
				</tfoot>
				
				<tbody style="display: none;" data-bind="visible: !pageLoading(), foreach: events">
					<tr>
						<td data-bind="text: date"></td>
						<td><a data-bind="html: name, attr: { href: $parent._clientRoot + '/#/event/' + id  }"></a></td>
					</tr>
				</tbody>
			</table>
		</div>

	</div>
</section>